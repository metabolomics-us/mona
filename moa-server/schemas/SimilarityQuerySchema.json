{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://mona.fiehnlab.ucdavis.edu/schema/similarityQuery",
  "type": "object",
  "properties": {
    "spectra": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "(?:\\d+:\\d+){1,}(?: \\d+:\\d+)+"
        },
        {"type": "integer"}
      ]
    },
    "minSimilarity": {
      "type": "number",
      "minimum": 0,
      "maximum": 1000
    },
    "commonIonCount": {
      "type": "integer",
      "minimum": 0
    },
    "maxHits": {
      "type": "integer",
      "minimum": 0,
      "maximum": 25
    }
  },
  "required": [
    "spectra",
    "minSimilarity"
  ],
  "additionalProperties": false
}
