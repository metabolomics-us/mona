{
  "$schema": "http://json-schema.org/draft-04/hyper-schema#",

  "definitions": {

    "strComp":{
      "title": "String comparator schema",
      "description": "Contains the valid operators for textual comparison in the query",
      "type": "object",
      "properties": {
        "eq": { "type": "string" },
        "ne": { "type": "string" },
        "gt": { "type": "string" },
        "lt": { "type": "string" },
        "ge": { "type": "string" },
        "le": { "type": "string" },
        "like": { "type": "string" },
        "ilike": { "type": "string" },
        "between": {
          "type": "array",
          "items": [ {"type":"string"} ],
          "minItems": 2,
          "maxItems": 2
        },
        "in": {
          "type": "array",
          "items": [ {"type":"string"} ],
          "minItems": 2
        }
      },
      "additionalProperties": false,
      "oneOf": [
        { "required": ["eq"] },
        { "required": ["ne"] },
        { "required": ["gt"] },
        { "required": ["lt"] },
        { "required": ["ge"] },
        { "required": ["le"] },
        { "required": ["like"] },
        { "required": ["ilike"] },
        { "required": ["between"] },
        { "required": ["in"] }
      ]
    },

    "numComp":{
      "title": "Numeric comparator schema",
      "description": "Contains the valid operators for numeric comparison in the query",
      "type": "object",
      "properties": {
        "eq": { "type": "number" },
        "ne": { "type": "number" },
        "gt": { "type": "number" },
        "lt": { "type": "number" },
        "ge": { "type": "number" },
        "le": { "type": "number" },
        "between": {
          "type": "array",
          "items": [ {"type":"number"} ],
          "minItems": 2,
          "maxItems": 2
        },
        "in": {
          "type": "array",
          "items": [ {"type":"number"} ],
          "minItems": 2
        }
      },
      "additionalProperties": false,
      "oneOf": [
        { "required": ["eq"] },
        { "required": ["ne"] },
        { "required": ["gt"] },
        { "required": ["lt"] },
        { "required": ["ge"] },
        { "required": ["le"] },
        { "required": ["between"] },
        { "required": ["in"] }
      ]
    },

    "tags": {
      "type": "array",
      "title": "query tags schema",
      "description": "An explanation about the purpose of this instance described by this schema.",
      "items": [
        { "type": "string" }
      ]
    },

    "compound": {
      "type": "object",
      "title": "query compound schema",
      "properties": {
        "name": { "$ref":"#/definitions/strComp" },
        "inchiKey": {
          "type": "object",
          "properties": {
            "eq": {
              "type": "string",
              "pattern": "^[A-Z]{14}-[A-Z]{10}-[A-Z]$"
            },
            "like": {
              "type": "string",
              "pattern": "^[A-Z]{14}-[A-Z]{10}-[A-Z]$"
            }
          },
          "oneOf": [
            { "required": ["eq"] },
            { "required": ["like"] }
          ]
        },
        "metadata": { "$ref": "#/definitions/metadata" }
      },
      "anyOf": [
        {},
        { "required": ["name"] },
        { "required": ["inchiKey"] },
        { "required": ["metadata"] }
      ],
      "additionalProperties": false
    },

    "metadata": {
      "type": "array",
      "title": "query metadata schema",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": { "$ref":"#/definitions/strComp" },
            "value": { "$ref":"#/definitions/strComp" },
            "category": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "id": { "type": "integer" }
              },
              "oneOf": [
                { "required": ["name"] },
                { "required": ["id"] }
              ],
              "additionalProperties": false
            }
          },
          "dependencies": { "value": ["name"] }
        }
      ]
    }
  },

  "type": "object",
  "title": "Spectrum Query Schema",
  "properties": {

    "compound": { "$ref": "#/definitions/compound" },
    "metadata": { "$ref": "#/definitions/metadata" },
    "tags": { "$ref": "#/definitions/tags" },

    "offset": {
      "type": "integer",
      "default": 0
    }
  },
  "anyOf": [
    { "required": ["compound"] },
    { "required": ["metadata"] },
    { "required": ["tags"] }
  ],
  "additionalProperties": false
}