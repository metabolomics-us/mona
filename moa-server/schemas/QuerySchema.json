{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Query schema",
  "definitions": {
    "metadata": {
      "type": "array",
      "title": "query metadata schema",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "properties": {
                    "like": {
                      "type": "string"
                    },
                    "eq": {
                      "type": "string"
                    }
                  },
                  "oneOf": [
                    {
                      "required": [
                        "eq"
                      ]
                    },
                    {
                      "required": [
                        "like"
                      ]
                    }
                  ]
                }
              ]
            },
            "value": {
              "type": "object",
              "properties": {
                "eq": {
                  "type": "string"
                },
                "like": {
                  "type": "string"
                },
                "ne": {
                  "type": "string"
                }
              },
              "oneOf": [
                {
                  "required": [
                    "eq"
                  ]
                },
                {
                  "required": [
                    "like"
                  ]
                },
                {
                  "required": [
                    "ne"
                  ]
                },
                {
                  "type": "string"
                }
              ]
            },
            "category": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "id": {
                  "type": "integer"
                }
              },
              "oneOf": [
                {
                  "required": [
                    "name"
                  ]
                },
                {
                  "required": [
                    "id"
                  ]
                }
              ],
              "additionalProperties": false
            }
          },
          "dependencies": {
            "value": [
              "name"
            ]
          }
        }
      ]
    }
  },
  "type": "object",
  "properties": {
    "compound": {
      "type": "object",
      "title": "query compound schema",
      "properties": {
        "name": {
          "type": "object",
          "properties": {
            "eq": {
              "type": "string"
            },
            "like": {
              "type": "string"
            }
          },
          "oneOf": [
            {
              "required": [
                "eq"
              ]
            },
            {
              "required": [
                "like"
              ]
            }
          ]
        },
        "inchiKey": {
          "type": "object",
          "properties": {
            "eq": {
              "type": "string",
              "pattern": "^[A-Z]{14}-[A-Z]{10}-[A-Z]$"
            },
            "like": {
              "type": "string",
              "pattern": "^[A-Z]{14}-[A-Z]{10}-[A-Z]$"
            }
          },
          "oneOf": [
            {
              "required": [
                "eq"
              ]
            },
            {
              "required": [
                "like"
              ]
            }
          ]
        },
        "metadata": {
          "$ref": "#/definitions/metadata"
        }
      },
      "anyOf": [
        {
          "required": [
            "name"
          ]
        },
        {
          "required": [
            "inchiKey"
          ]
        },
        {
          "required": [
            "metadata"
          ]
        }
      ]
    },
    "metadata": {
      "$ref": "#/definitions/metadata"
    },
    "tags": {
      "type": "array",
      "title": "Tags schema.",
      "description": "An explanation about the puropose of this instance described by this schema.",
      "name": "tags",
      "items": [
        {
          "type": "string"
        }
      ]
    },
    "offset": {
      "type": "integer",
      "default": 0
    }
  },
  "required": [
    "compound",
    "metadata"
  ],
  "anyOf": [
    {
      "required": [
        "compound"
      ]
    },
    {
      "required": [
        "metadata"
      ]
    },
    {
      "required": [
        "tags"
      ]
    }
  ],
  "additionalProperties": false
}